{
  "name": "cosmiconfig-typescript-swc-loader",
  "version": "0.0.2",
  "description": "Fast TypeScript config file handler for cosmiconfig using SWC",
  "main": "dist/cjs/index.js",
  "repository": "git@github.com:charlypoly/cosmiconfig-typescript-swc-loader.git",
  "author": "Charly POLY <cpoly55@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --passWithNoTests",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "bob build --single",
    "prettier": "prettier --write --list-different .",
    "prettier:check": "prettier --check .",
    "lint": "eslint --ignore-path .gitignore .",
    "ci:lint": "eslint --ignore-path .gitignore --ext .ts . --output-file eslint_report.json --format json",
    "prerelease": "yarn build",
    "release": "changeset publish"
  },
  "dependencies": {
    "@swc/core": "^1.3.3",
    "cosmiconfig": "^7.0.1"
  },
  "keywords": [
    "cosmiconfig",
    "typescript",
    "swc"
  ],
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-env": "7.25.3",
    "@babel/preset-typescript": "7.24.7",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.7",
    "@types/jest": "28.1.8",
    "@types/node": "18.19.44",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "bob-the-bundler": "4.1.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.10.0",
    "jest": "28.1.3",
    "prettier": "2.8.8",
    "ts-jest": "28.0.8",
    "babel-jest": "28.1.3",
    "ts-node": "10.9.2",
    "typescript": "4.9.5"
  },
  "type": "module",
  "module": "dist/esm/index.js",
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  }
}
