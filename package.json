{
  "name": "cosmiconfig-typescript-swc-loader",
  "version": "0.0.1",
  "description": "Fast TypeScript config file handler for cosmiconfig using SWC",
  "main": "dist/cjs/index.js",
  "repository": "git@github.com:charlypoly/cosmiconfig-typescript-swc-loader.git",
  "author": "Charly POLY <cpoly55@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --passWithNoTests --config jest.ts",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "bob build --single",
    "prettier": "prettier --write --list-different .",
    "prettier:check": "prettier --check .",
    "lint": "eslint .",
    "prerelease": "yarn build",
    "release": "changeset publish"
  },
  "dependencies": {
    "@swc/core": "^1.3.3",
    "cosmiconfig": "^7.0.1"
  },
  "keywords": [
    "cosmiconfig",
    "typescript"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.4",
    "@types/jest": "^29.1.0",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "bob-the-bundler": "^4.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "type": "module",
  "module": "dist/esm/index.js",
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  }
}
